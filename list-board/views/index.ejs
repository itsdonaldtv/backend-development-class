<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Board</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>List Board</h1>
    
    <form action="/add" method="POST">
        <input type="text" name="title" placeholder="Title" required>
        <input type="date" name="date" required>
        <textarea name="textContent" placeholder="Text Content" required></textarea>
        <label>
            <input type="checkbox" name="reported">
            Reported
        </label>
        <input type="text" name="assignee" placeholder="Assignee" required>
        <button type="submit">Add List</button>
    </form>

    <ul class="task-list">
        <% tasks.forEach(task => { %>
            <li>
                <h3><%= task.title %></h3>
                <p>Date: <%= task.date.toLocaleDateString() %></p>
                <p><%= task.textContent %></p>
                <p>Reported: <%= task.reported ? 'Yes' : 'No' %></p>
                <p>Assignee: <%= task.assignee %></p>
                <form action="/delete/<%= task._id %>" method="POST">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }); %>
    </ul>
</body>
</html>